        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSimpleApplication_CSharp"
        mc:Ignorable="d"
        Title="Gjallarhorn Simple Sample Application" MinHeight="120" Width="300" Height="Auto" SizeToContent="WidthAndHeight">
